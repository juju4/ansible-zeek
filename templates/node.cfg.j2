{{ ansible_managed | comment }}
# Example BroControl node configuration.
#
# This example has a standalone node ready to go except for possibly changing
# the sniffing interface.

{% if bro_mode is defined and bro_mode == 'alone' %}
# This is a complete standalone configuration.  Most likely you will
# only need to change the interface.
[bro]
type=standalone
host=localhost
{% if hostvars is defined and hostvars[inventory_hostname].ansible_facts['default_ipv4'] is defined and hostvars[inventory_hostname].ansible_facts['default_ipv4.alias'] is defined and hostvars[inventory_hostname].ansible_facts['default_ipv4.alias'] != '' %}
interface={{ hostvars[inventory_hostname].ansible_facts['default_ipv4.alias'] }}
{% else %}
interface=eth0
{% endif %}

{% elif bro_mode is defined and (bro_mode == 'manager' or bro_mode == 'node') %}
## Below is an example clustered configuration. If you use this,
## remove the [bro] node above.

[manager]
type=manager
host={{ bro_manager }}

#[proxy-1]
#type=proxy
#host=host1
#

{% for item in bro_nodes %}
[node-{{ item }}]
type=worker
host={{ item }}
interface={{ bro_nodes_if }}
#lb_method=pf_ring
#lb_procs=4

{% endfor %}

{% endif %}
